<?xml version="1.0"?>
  <conf>
    <!-- Host configuration -->
    <option name="host_file">host/common.xml</option>
    <option name="input_mode">mouse</option>
    <option name="sync">1</option>
    <option name="bench">1</option>
    <!-- SCM viewer configuration -->
    <option name="scm_viewer_cache_size">256</option>
    <option name="report_port">8111</option>
    <option name="report_host">127.0.0.1</option>
    <!-- OpenGL context configuration -->
    <option name="multisample_samples">0</option>
    <option name="multisample_buffers">0</option>
    <option name="max_anisotropy">4</option>
    <!-- GUI options -->
    <option name="sans_font">FreeSans.ttf</option>
    <option name="mono_font">FreeMono.ttf</option>
    <option name="sans_size">12</option>
    <option name="mono_size">12</option>
    <!-- Miscellaneous options -->
    <option name="screenshot_file">snap.png</option>
    <!-- Common keyboard commands -->
    <option name="key_exit">27</option>
    <option name="key_snap">290</option>
  </conf>
